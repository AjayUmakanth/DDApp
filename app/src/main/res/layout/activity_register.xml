<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".RegisterActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="3sp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45sp"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="49sp"
            android:layout_marginRight="49sp"
            android:text="Enter Details"
            android:textColor="@color/text_color"
            android:textSize="55sp"
            android:textStyle="bold"
            tools:text="Enter Details" />

        <EditText
            android:id="@+id/name"
            android:layout_width="335sp"
            android:layout_height="56sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="41sp"
            android:layout_marginLeft="41sp"
            android:layout_marginTop="35sp"
            android:layout_marginEnd="49sp"
            android:layout_marginRight="49sp"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/email"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="41sp"
            android:layout_marginLeft="41sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="45sp"
            android:layout_marginRight="45sp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textPersonName"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="41sp"
            android:layout_marginLeft="41sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="45sp"
            android:layout_marginRight="45sp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="date"
            android:textColor="@color/text_color" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="46sp"
            android:layout_marginLeft="46sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="45sp"
            android:layout_marginRight="45sp"
            android:ems="10"
            android:hint="Enter Phone No."
            android:inputType="phone"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="49sp"
            android:layout_marginLeft="49sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="45sp"
            android:layout_marginRight="45sp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="@color/text_color" />

        <EditText
            android:id="@+id/pass2"
            android:layout_width="335sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="48sp"
            android:layout_marginLeft="48sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="45sp"
            android:layout_marginRight="45sp"
            android:ems="10"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:textColor="@color/text_color" />
        <Button
            android:id="@+id/register"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="52sp"
            android:layout_marginLeft="52sp"
            android:layout_marginTop="35sp"
            android:layout_marginBottom="35sp"
            android:background="@color/button_color"
            android:text="Register"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="170sp"
            android:layout_height="49sp"
            android:layout_below="@+id/dob"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="25sp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:textColor="@color/text_color"
                android:layout_width="85sp"
                android:layout_height="match_parent"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:textColor="@color/text_color"
                android:layout_width="85sp"
                android:layout_height="match_parent"
                android:text="Female" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="46sp"
            android:layout_marginLeft="46sp"
            android:layout_marginTop="33sp"
            android:textColor="@color/text_color"
            android:text="Select Gender"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>