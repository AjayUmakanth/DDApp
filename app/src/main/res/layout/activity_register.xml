<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="322dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:text="Enter Details"
                android:textColor="@color/text_color"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="Enter Details" />

            <EditText
                android:id="@+id/name"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="50sp"
                android:ems="10"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textColor="@color/text_color"
                android:layout_marginStart="50sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="50sp"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_color"
                android:layout_marginStart="50sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="50sp"
                android:ems="10"
                android:hint="Enter Phone No."
                android:inputType="phone"
                android:textColor="@color/text_color"
                android:layout_marginStart="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/selectDOB"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:layout_marginLeft="50sp"
                    android:background="@color/button_color"
                    android:text="Select DOB"
                    android:textColor="@color/text_color"
                    android:layout_marginStart="50sp" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginEnd="45sp"
                    android:layout_marginRight="45sp"
                    android:layout_toEndOf="@+id/selectDOB"
                    android:layout_toRightOf="@+id/selectDOB"
                    android:ems="10"
                    android:hint="--/--/----"
                    android:inputType="date"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="50sp"
                    android:text="Select Gender"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:layout_marginStart="50sp" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="160sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="25sp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Female"
                        android:textColor="@color/text_color" />

                </RadioGroup>

            </LinearLayout>

            <EditText
                android:id="@+id/pass"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="50sp"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:layout_marginStart="50sp" />

            <EditText
                android:id="@+id/pass2"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="50sp"
                android:ems="10"
                android:hint="Re-enter Password"
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:layout_marginStart="50sp" />

            <Button
                android:id="@+id/register"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="50sp"
                android:background="#164073"
                android:text="Register"
                android:textColor="@color/button_color"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginStart="120sp"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="400sp" />
</RelativeLayout>