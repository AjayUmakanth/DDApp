<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="370sp"
        android:layout_height="78sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26sp"
        android:layout_marginLeft="26sp"
        android:layout_marginTop="193sp"
        android:text="Your Depression Level"
        android:textColor="@color/text_color"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result"
        android:layout_width="176dp"
        android:layout_height="125dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="30dp"
        android:text="null"
        android:textColor="@color/text_color"
        android:textSize="100sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/home"
        android:layout_width="181sp"
        android:layout_height="83sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="123sp"
        android:layout_marginLeft="123sp"
        android:layout_marginTop="456sp"
        android:textColor="@color/text_color"
        android:background="@color/button_color"
        android:textSize="40sp"
        android:text="home" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="141dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="244dp"
        android:visibility="invisible" />

</RelativeLayout>