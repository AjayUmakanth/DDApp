<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="163dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="19sp"
                android:layout_marginLeft="19sp"
                android:layout_marginTop="32sp"
                android:text="Depression Level\n(Questionnaire Result)"
                android:textColor="@color/text_color"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result"
                android:layout_width="335dp"
                android:layout_height="119dp"
                android:layout_below="@+id/title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="null"
                android:textColor="@color/text_color"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="15sp"
                android:text="null"
                android:textColor="@color/text_color"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="133dp"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:text="null"
                android:textColor="@color/text_color"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/home"
                android:layout_width="106sp"
                android:layout_height="38sp"
                android:layout_below="@+id/treatment"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="151sp"
                android:layout_marginLeft="151sp"
                android:layout_marginTop="34sp"
                android:layout_marginBottom="34sp"
                android:background="#164073"
                android:text="home"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="141sp"
                android:layout_height="123sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="134sp"
                android:layout_marginLeft="134sp"
                android:layout_marginTop="250sp"
                android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>